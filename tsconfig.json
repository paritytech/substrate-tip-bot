{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["mocha", "chai", "node"]
  },
  "exclude": ["node_modules"]
}
